{
  "name": "clappr-responsive-container-plugin",
  "version": "1.0.0",
  "description": "A plugin for clappr which will resize the container to never be larger than the current viewport width.",
  "main": "dist/clappr-responsive-container-plugin.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack --progress --optimize-occurence-order",
    "watch": "./node_modules/.bin/webpack --progress --optimize-occurence-order --watch",
    "release": "./node_modules/.bin/webpack --progress --optimize-occurence-order -p",
    "start": "./node_modules/.bin/webpack-dev-server --content-base demo/ --output-public-path /latest --hot"
  },
  "author": "Tobias Lengsholz <tobias@lengsholz.de>",
  "license": "MIT",
  "repository": "tobilen/clappr-responsive-container-plugin",
  "dependencies": {
    "clappr": "^0.2.22"
  },
  "devDependencies": {
    "babel-core": "^6.7.5",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-es2015": "^6.6.0",
    "clean-webpack-plugin": "^0.1.3",
    "compass-mixins": "^0.12.7",
    "css-loader": "^0.24.0",
    "es6-promise-polyfill": "^1.2.0",
    "file-loader": "^0.8.4",
    "html-loader": "^0.4.3",
    "node-sass": "~3.8.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  }
}
